def gv

pipeline {
    agent any
    stages {
    
        stage('init') {
            steps {
                script {
                    gv = load "${WORKSPACE}/Jenkins/script.groovy"
                }
            }
         }

        stage('Build Images') {
            steps {
                script{
                    gv.buildImage()  
                }
            }
        }

        stage('Push Images')
        {
            steps {
                script{
                    gv.pushImage() 
                }
            }
        }
    }
}
