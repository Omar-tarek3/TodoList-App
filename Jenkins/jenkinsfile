def gv

pipeline {
    agent any
    stages {
    
        stage('init') {
            steps {
                script {
                    gv = load "${WORKSPACE}/Jenkins/script.groovy"
                }
            }
         }

        stage('build image') {
            steps {
                script{
                    gv.buildImage()  
                }
            }
        }

        stage('deploy')
        {
            steps {
                script{
                     echo 'hello 2'
                }
            }
        }
    }
}